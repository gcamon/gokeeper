<!DOCTYPE html>
<html lang="en" ng-app = 'myApp'>
	<head>
		<title>Gk</title>
		<meta charset="utf-8" />
    	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    	<!-- link to stylesheet --> 
    	<link type="text/css" rel="stylesheet" href="/assets/css/bootstrap.min.css"/>
    	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous"/>
		<link rel="stylesheet" type="text/css" href="/assets/css/style.css"/>
		<link/>
	</head>
	<body>
		<header class="container-fluid">
			<h2>Gokeeper</h2>
			<button>admin login</button>
			<button>client login</button>
			<nav>
				<ul>
					<li>Home</li>
					<li>About</li>
					<li>Contact</li>
				</ul>
			</nav>
		</header>
		<section class='body container-fluid'>
			<div class="row">
				<div class="col-sm-2 col-md-2 col-lg-2 bound">
					<h2>
						activities
					</h2>
				</div>
				<div class="col-sm-7 col-md-7 col-lg-7 bound">
					<h2>
						actual content
					</h2>
					<div class="view-animate-container" style="background-color: #eee">				
						<div ng-view class="view-animate">
						</div>
					</div>
				</div>
				<div class="col-sm-3 col-md-3 col-lg-3 bound">
					<h2>
						accounts
					</h2>
				</div>
			</div>
		</section>

		<!--modal -->
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title heading" id="myModalLabel">Member Log In</h4>
                      </div>
                      <div class="modal-body">
                        <form action="/user" method="POST">
                          <label for="email">Email</label>
                          <input type="text" name="email" placeholder="email" class="login"/>
                          <label for="password">Password</label>
                          <input type="password" name="password" placeholder="password" class="login"/>
                          <input type="submit" class="btn btn-primary" value="send"/>
                        </form>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="modal fade" id="regModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title heading" id="myModalLabel">Sign Up<span>Enter your details. Note all fields are required</span></h4>
                      </div>
                      <div class="modal-body">
                        <form action="/user" method="POST">                        
                          <input type="text" name="firstname" placeholder="firstname" class="sign" required/>
                          <input type="text" name="lastname" placeholder="lastname" class="sign" required/>                        
                          <input type="email" name="Email" placeholder="Email" class="login" required/>
                          <input type="password" name="password" placeholder="Password" class="login" required/>
                          <input type="password" name="password2" placeholder="Confirm password" class="login" required/>
                          <input type="text" name="company" placeholder="Company_name" class="login" required/>
                          <input type="text" name="title" placeholder="Your position in the company" class="login" required/>
                          <input type="submit" class="btn btn-primary" value="send"/>
                        </form>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                      </div>
                    </div>
                  </div>
                </div>


                <script type="text/javascript" src="assets/js/source.js"></script>
                <script type="text/javascript" src="assets/js/ngroute.js"></script>
                <script type="text/javascript" src="assets/js/jquery-1.11.3.min.js"></script>
               	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular-animate.js"></script>
                <script type= "text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
               <script type="text/javascript" src="assets/js/client.js"></script>
	</body>
</html>